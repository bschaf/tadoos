@import 'nib'
@import 'normalize'
 global-normalize()

 // un-normalize cancel search
 input[type="search"]::-webkit-search-cancel-button {
   -webkit-appearance: searchfield-cancel-button;
 }

action(position)
  font-weight bold
  font-size 14px
  float position
  if (position == left)
    border-radius(3px 0px 0px 3px)
  else
    border-radius(0px 3px 3px 0px)
  text-shadow 0 1px 0 rgba(0, 0, 0, .3)
  padding 0 10px
  background #5bb94b
  cursor pointer
  position relative
  transition all .3s ease-out

  &:hover
    background lighten(#5bb94b, 10%)

*
  box-sizing border-box

body
  font-family 'Open Sans', sans-serif
  background #f7fafc
  color #3a4c59

[ng-cloak]
  display none !important

header[role="banner"]
  background #0e2735
  min-height 300px

  section
    padding-top 8%
    padding-left 10%

main
  padding 0 1em

h1
  font-family "Helvetica Neue", Arial, sans-serif;
  font-size 58px
  padding 0
  margin 0
  line-height 1.4
  color white

ul
  padding 0
  clear both

li
  font-size 14px
  font-weight 300
  line-height 34px
  margin-bottom 4px
  border-radius(3px)
  list-style none
  background #0e2735
  color #f7fafc
  transition all .1s ease-out

  &:hover
    background lighten(#0e2735, 5%)

  input[type="checkbox"]
    border 0
    appearance checkbox
    -webkit-appearance none
    background none
    width 30px
    action(left)

    &:after
      position absolute
      top 22%
      left 28%
      color #f7fafc
      text-shadow 0 -1px 0 rgba(0, 0, 0, .3)
      content "\2713"

  &.complete
    opacity .3

    input
      &:hover
        opacity 1

  span
    line-height 1.4
    padding 2px 6px

    &.complete
      text-decoration line-through

  input[type="text"]
    width 600px

  &.editing
    height 34px
    overflow hidden

    span
      position absolute
      display none

    input[type="text"]
      position relative
      top -2px
      background transparent
      border 0
      line-height 1.4
      font-size 14px
      color white
      font-weight 300

  .check
    action(left)

    &:after
      content "\2713"

  .delete
    action(right)

    &:after
      content "\2715"

.edit-tadoo
  display none

.editing
  input
    display inline-block

input
  font-family 'Open Sans', sans-serif
  font-size 20px
  height 34px
  line-height 1.4
  vertical-align middle
  border 1px solid #c3cdd5
  border-radius(3px)
  padding: 2px 6px
  color #3a4c59
  max-width 240px
  &:focus
    outline none

button[type="submit"]
  font-size 20px
  font-weight bold
  line-height 1.4
  background #5bb94b
  color white
  border 1px solid #5bb94b
  border-radius(3px)
  padding: 2px 6px
  vertical-align middle
  transition all .3s ease-out

  &:hover
    background lighten(#5bb94b, 10%)

  &:focus
    outline none

  &:after
    content "\002b"

.filter
  margin 1em 0
  font-size 12px
  height auto
  float right
  clear both
  &::-webkit-input-placeholder
    color #b7b7b7

.phone
  float right
  padding 1em
  text-align right
  width 280px

  p
    float right
    color white
    font-size 12px

  input
    font-size 12px
    line-height 1.2
    height 23px

    &.ng-dirty
      &.ng-valid
        box-shadow inset 0 0 2px rgba(0, 128, 0, .4)
        border 1px solid rgba(0, 128, 0, .4)

      &.ng-invalid
        box-shadow inset 0 0 2px rgba(255, 0, 0, .4)
        border 1px solid rgba(255, 0, 0, .4)

  button
    font-size 12px
    font-weight 300
    text-shadow 0 1px 0 rgba(0, 0, 0, .3)

    &:after
      content ""

::-webkit-input-placeholder
  font-style italic
  color #a3a3a3

.loading {
  font-size: 10px;
  margin: 2em auto;
  text-indent: -9999em;
  width: 5em;
  height: 5em;
  border-radius: 50%;
  background: #5bb94b;
  background: -moz-linear-gradient(left, #5bb94b 10%, rgba(91, 185, 75, 0) 42%);
  background: -webkit-linear-gradient(left, #5bb94b 10%, rgba(91, 185, 75, 0) 42%);
  background: -o-linear-gradient(left, #5bb94b 10%, rgba(91, 185, 75, 0) 42%);
  background: -ms-linear-gradient(left, #5bb94b 10%, rgba(91, 185, 75, 0) 42%);
  background: linear-gradient(to right, #5bb94b 10%, rgba(91, 185, 75, 0) 42%);
  position: relative;
  -webkit-animation: load3 1.4s infinite linear;
  animation: load3 1.4s infinite linear;
}

.loading:before {
  width: 50%;
  height: 50%;
  background: #5bb94b;
  border-radius: 100% 0 0 0;
  position: absolute;
  top: 0;
  left: 0;
  content: '';
}

.loading:after {
  background: #f7fafc;
  width: 75%;
  height: 75%;
  border-radius: 50%;
  content: '';
  margin: auto;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}

@-webkit-keyframes load3 {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}

@keyframes load3 {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}
